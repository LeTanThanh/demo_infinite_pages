$('.js-infinite-table-body').append('<%= j render(partial: "lesson", collection: @lessons, as: :lesson) %>');

<% if @lessons.last_page? %>
  $('.pagination').html("That's all, folks!");
<% else %>
  $('.pagination')
    .html('<%=j link_to_next_page(@lessons, "Next Page", remote: true) %>');
<% end %>
